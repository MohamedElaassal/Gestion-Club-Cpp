{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "${workspaceFolder}/build.bat",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "clear": true
            }
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build.bat"
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "clear": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "del Main.exe 2>nul || echo No executable to clean",
            "problemMatcher": []
        }
    ]
}